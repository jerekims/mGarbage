<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jere.garbageapp.Fragments.AboutFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fragment_about_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/transparent"
            android:layout_margin="16dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/fragment_about_tagline"
            android:layout_below="@id/fragment_about_image"
            android:layout_margin="8dp"
            android:textAlignment="viewStart"
            android:textStyle="italic"
            android:textSize="16sp"
            android:padding="16dp"
            android:text="@string/tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_about_description"
            android:layout_below="@id/fragment_about_tagline"
            android:layout_margin="4dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="viewStart"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="@string/company_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</ScrollView>
